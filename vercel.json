{
  "version": 2,
  "builds": [
    {
      "src": "user-guard-verse-main/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },

    // let Vite static files be served normally
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },

    // SPA fallback â€“ anything else goes to index.html
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
